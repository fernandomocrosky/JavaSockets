<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="projeto.viewControllers.VerFilmeController"
    stylesheets="@../views/styles/style.css"
    style="-fx-padding:20; -fx-background-color: #000000;">

    <!-- Topo da tela -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="Voltar" onAction="#voltar" styleClass="button-primary" />
            <Label text="Detalhes do Filme"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #fff;" />
        </HBox>
    </top>

    <!-- Conteúdo central -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #000000;">
            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 30; -fx-max-width: 800; -fx-background-color: #000000;">
                <Label text="Título:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Label fx:id="tituloLabel" style="-fx-font-size: 18px;" />
                
                <Separator style="-fx-background-color: #555;" />
                
                <Label text="Diretor:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Label fx:id="diretorLabel" style="-fx-font-size: 16px;" />
                
                <Separator style="-fx-background-color: #555;" />
                
                <Label text="Ano:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Label fx:id="anoLabel" style="-fx-font-size: 16px;" />
                
                <Separator style="-fx-background-color: #555;" />
                
                <Label text="Sinopse:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Label fx:id="sinopseLabel" wrapText="true" style="-fx-font-size: 15px; -fx-line-spacing: 5px;" />
                
                <Separator style="-fx-background-color: #555;" />
                
                <Label text="Gêneros:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <ListView fx:id="generosList" prefHeight="150" prefWidth="300" styleClass="list-view" />

                <Separator style="-fx-background-color: #555;" />

                <HBox spacing="40">
                    <VBox spacing="5">
                        <Label text="Nota Média:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <Label fx:id="notaLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Quantidade de Avaliações:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                        <Label fx:id="avaliacoesLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    </VBox>
                </HBox>

                <Separator style="-fx-background-color: #555;" />

                <Label text="Avaliações:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <ListView fx:id="reviewsList" prefHeight="300" styleClass="list-view" />

                <Label fx:id="statusLabel" text="" />
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <TextArea fx:id="logArea" prefRowCount="15" />
    </bottom>

</BorderPane>

