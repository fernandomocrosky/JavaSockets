<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="projeto.viewControllers.EditarReviewController"
    stylesheets="@../views/styles/style.css"
    style="-fx-padding:20;">

    <!-- Topo da tela -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button text="Voltar" onAction="#voltar" styleClass="button-primary" />
            <Label text="Editar Review"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #fff;" />
        </HBox>
    </top>

    <!-- Conteúdo central -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <TextField fx:id="tituloField" id="titulo" promptText="titulo" />
            <TextField fx:id="descricaoField" id="descricao" promptText="descricao" />
            <TextField fx:id="notaField" id="nota" promptText="nota" />

            <HBox alignment="CENTER" spacing="10">
                <Button text="Salvar" onAction="#salvar" styleClass="button-primary" />
                <Button text="Cancelar" onAction="#cancelar" styleClass="button-danger" />
            </HBox>
            <Label fx:id="status" text="Aguardando edição..." />
        </VBox>
    </center>

    <bottom>
        <TextArea fx:id="logArea" prefRowCount="15" />
    </bottom>

</BorderPane>

