<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="projeto.viewControllers.MeuUsuarioController"
    stylesheets="@../views/styles/style.css"
    style="-fx-padding: 20;">

    <!-- Topo: menu + botão logout -->
    <top>
        <!-- Importa o menu -->
        <fx:include source="components/Menu.fxml" />

        <!-- Topo da tela -->
    </top>

    <!-- Conteúdo principal -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Seu Usuario:" styleClass="menu-title" />
            <Label fx:id="usuarioLabel" text="" styleClass="menu-title" />
        </VBox>
    </center>

    <bottom>
        <TextArea fx:id="logArea" prefRowCount="15" />
    </bottom>
</BorderPane>