<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="projeto.viewControllers.MenuController"
    spacing="20" alignment="CENTER_LEFT"
    styleClass="menu-bar">

    <Label text="VoteFlix" styleClass="menu-title" />

    <Button fx:id="btnHome" text="Home" onAction="#goHome" styleClass="menu-button" />
    <Button fx:id="btnUsuarios" text="Usuários" onAction="#goUsuarios" styleClass="menu-button" />
    <Button fx:id="btnFilmes" text="Filmes" onAction="#goFilmes" styleClass="menu-button" />
    <Button fx:id="btnReviews" text="Meus Reviews" onAction="#goReviews" styleClass="menu-button" />

    <Pane HBox.hgrow="ALWAYS" />

    <Button text="Meu Usuário" onAction="#meuUsuario" styleClass="meu-usuario-button" />
    <Button text="Logout" onAction="#logout" styleClass="logout-button" />
</HBox>